<h1>Article List</h1>

<%= link_to "New Article", new_article_path %><br /><br />

<% if @articles.length > 0 %>
  <table>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.author %></td>
          <td>
            <%= link_to "show", article_path(article) %>
            <%= link_to "edit", edit_article_path(article) %>
            <%= link_to "delete", article_path(article), method: :delete, confirm: "Are you sure?" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>There are no articles, you should create one!</h3>
<% end %>
